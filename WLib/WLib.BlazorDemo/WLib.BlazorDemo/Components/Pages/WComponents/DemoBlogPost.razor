<h2 id="tryitout">Try It Out</h2>

<div class="mb-3">
    <label>Blog Title:</label>
    <input type="text" @bind="blogTitle" class="form-control" />
</div>

<div class="mb-3">
    <label>Blog Subtitle:</label>
    <input type="text" @bind="blogSubtitle" class="form-control" />
</div>

<div class="mb-3">
    <label>Author:</label>
    <input type="text" @bind="blogAuthor" class="form-control" />
</div>

<div class="mb-3">
    <label>Published Date:</label>
    <input type="date" @bind="publishDate" class="form-control" />
</div>

<div class="mb-3">
    <label>Just Summary:</label>
    <input type="checkbox" @bind="justSummary" />
</div>

<h4>BlogPost Preview</h4>
<BlogPost Title="@blogTitle" Subtitle="@blogSubtitle" DateOfPublish="@publishDate.ToString("yyyy-MM-dd")" Author="@blogAuthor" Content="@blogContent" JustSummary="@justSummary" MaxWidth="100%" />

@code {
    private string blogTitle = "Sample Blog Post";
    private string blogSubtitle = "A demonstration of the BlogPost component.";
    private string blogAuthor = "John Doe";
    private DateTime publishDate = DateTime.Now; // Corrected to use DateTime
    private bool justSummary = false;

    private List<BlogPostContent> blogContent = new List<BlogPostContent>
    {
        new BlogPostContent("Introduction", "# Welcome to the blog post\nThis is the first chapter content."),
        new BlogPostContent("Main Content", "# Main Content\nHere goes the detailed description."),
        new BlogPostContent("Conclusion", "# Conclusion\nWrapping up the post.")
    };

    private string exampleCode = @"
    <!-- Basic BlogPost usage -->
